<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Phoneshop servlet api training</display-name>
    <listener>
        <listener-class>sampledata.ProductDemodataServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>sampledata.AddCartHttpSessionListener</listener-class>
    </listener>
    <welcome-file-list>
    <welcome-file>/WEB-INF/pages/welcomePage.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>productList</servlet-name>
        <servlet-class>com.es.phoneshop.web.ProductListPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productList</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>commentServlet</servlet-name>
        <servlet-class>com.es.phoneshop.web.CommentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>commentServlet</servlet-name>
        <url-pattern>/products/comment/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sortProduct</servlet-name>
        <servlet-class>com.es.phoneshop.web.SortProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>sortProduct</servlet-name>
        <url-pattern>/products/sort/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productPage</servlet-name>
        <servlet-class>com.es.phoneshop.web.ProductDetailPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productPage</servlet-name>
        <url-pattern>/products/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartPage</servlet-name>
        <servlet-class>com.es.phoneshop.web.CartPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cartPage</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>deleteCartItem</servlet-name>
        <servlet-class>com.es.phoneshop.web.CartItemDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteCartItem</servlet-name>
        <url-pattern>/cart/deleteCartItem</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>miniCart</servlet-name>
        <servlet-class>com.es.phoneshop.web.MiniCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>miniCart</servlet-name>
        <url-pattern>/minicart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>chechoutPage</servlet-name>
        <servlet-class>com.es.phoneshop.web.CheckoutPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>chechoutPage</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>overview</servlet-name>
        <servlet-class>com.es.phoneshop.web.OrderOverviewPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>overview</servlet-name>
        <url-pattern>/overview/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>dosProtectionFilter</filter-name>
        <filter-class>com.es.phoneshop.filters.DosFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>dosProtectionFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
</web-app>

